@model RoadRules.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Регистрация";
}

<div class="wrap-container login-container">
    @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "login-form", role = "form"}))
    {
        @Html.AntiForgeryToken()
        <h2 class="title">Связывание вашей учетной записи @ViewBag.LoginProvider</h2>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="fields">
            <div class="relative-block input-block">
                <label class="label input-label" for="email">
                    <span><i class="fa fa-user"></i></span>
                </label>
                @Html.TextBoxFor(m => m.Email, new {@class = "input-field", id = "email", placeholder = "email"})
                @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="button-block">
            <input class="button" type="submit" value="Регистрация">
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}